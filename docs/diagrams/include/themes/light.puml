!define BG_MAIN_COLOR      #4051b5
!define BG_SECONDARY_COLOR #4051b5
!define BG_PACKAGE_COLOR   #4051b5
!define BORDER_COLOR       #ff6f00
!define FONT_COLOR         #ffffff
!define ARROW_COLOR        #ff6f00

skinparam backgroundColor #transparent
skinparam HyperlinkColor #4051b5

' include the general skinparams for both, light and dark
' to overwrite with the given settings
!include general.puml

skinparam Default {
  FontName "Roboto"
  FontColor #4051b5
  FontSize 13
}

' Override default for mindmap nodes - must come after Default
skinparam nodeFontColor #ffffff

skinparam Arrow {
  Color ARROW_COLOR
  FontColor #4051b5
  FontStyle normal
  Thickness 2
}

skinparam state {
    BackgroundColor BG_MAIN_COLOR
    FontColor FONT_COLOR
    AttributeFontColor FONT_COLOR
    ArrowColor ARROW_COLOR
    BorderColor BORDER_COLOR
}

skinparam class {
    BackgroundColor BG_MAIN_COLOR
    FontColor FONT_COLOR
    BorderColor BORDER_COLOR
}

' Mindmap specific styling - white text inside nodes, blue connectors outside
skinparam node {
    BackgroundColor BG_MAIN_COLOR
    FontColor FONT_COLOR
    BorderColor BORDER_COLOR
}

skinparam arrowThickness 1
